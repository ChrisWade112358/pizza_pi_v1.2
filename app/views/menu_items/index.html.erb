<h1>Menu Items Index Page</h1>

<%= button_to "New Menu Item", new_menu_item_path, method: :get %>

<% @menu_items.each do |item| %>
    <h2><%= item.name %></h2>
    <p>$<%= item.price %></p>
    <p><%= item.description %></p>
    <%= button_to "Edit", edit_menu_item_path(item), :method => :get %>
    <%= button_to "Delete", menu_item_path(item), method: :delete, data: { confirm: " Are you sure?" } %>
<% end %>